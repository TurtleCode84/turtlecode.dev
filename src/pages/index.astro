---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm TurtleCode<span class="text-slate-500">84</span></div>
    <div class="text-3xl py-3 font-bold">Full-Stack Developer and Network Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        I learned how to code and just couldn't stop there! I've been exploring the amazing world of <b>Computer Science and Engineering</b>
        for over six years now, and there's still more I continue to discover, build, improve. Lately, I've been interested in computer
        systems and network management, working with physical hardware to deploy various types of servers. Thanks for stopping by!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:turtle@turtlecode.me" target="_blank" referrerpolicy="no-referrer-when-downgrade"> Let's connect!</a>
      <a href="https://github.com/turtlecode84" target="_blank" class="btn btn-outline ml-5">
        Find me on GitHub
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My recent projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="TrackTask"
    img="/post_img.webp"
    desc="A task-tracking platform built on Next.js, perfect for keeping lists and sharing them with teams. Currently undergoing an API rewrite."
    url="https://github.com/turtlecode84/tracktask"
    badge="FEATURED"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="turtlecode.me"
    img="/post_img.webp"
    desc="A portfolio website about me and my awesome computing projects. It\'s what you're looking at right now! More details coming soon."
    url="https://github.com/turtlecode84/turtlecode.me"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Project: NAS"
    img="/post_img.webp"
    desc="A project starting soon with physical hardware, in which I\'ll get to setup a fully-functional NAS device and learn how to manage a network server."
    url="/blog"
    badge="COMING SOON"
    target="_self"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
